        display: inline-block;
    }

    header#main-header {
        background: inherit;
        a {
            color: #2969b9;
        }
    }

    footer {
        color: rgba(0, 0, 0, 0.54);
        background-image: linear-gradient(0deg, #DFF8FF 0%, #fff 65%);
        #main-footer_createdWith-love {
            .svg-icon path,
            .svg-icon polygon,
            .svg-icon rect {
                fill: #ff0033;
            }
        }
    }

    /* styles for svg icons */
