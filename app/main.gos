package main

import (
    "fmt"
    
    "github.com/gascore/dom"

    "github.com/gascore/gas"
    "github.com/gascore/gas/web"
    "github.com/gascore/example/app/router"
    "github.com/gascore/example/app/components"
)

func main() {
    fmt.Println("Hello stranger!ðŸ‘‹\n")
    
    InitRouter()
    components.InitComponents()

    app := &App{
        htmlEl: dom.Doc.GetElementsByTagName("html")[0],
    }
    c := &gas.C{Root: app}
    app.c = c

    err := gas.Init(web.GetBackEnd(), "app", c)
    if err != nil {
        panic(err)
    }

    web.KeepAlive()
}

type App struct {
    c *gas.C
    isDark bool
    htmlEl *dom.Element
}

