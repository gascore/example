package main

import (
    "github.com/gascore/gas"
    "github.com/gascore/gas/web"
    . "github.com/gascore/wow/app/store"
)

func main() {
    err := InitStore()
    if err != nil {
        panic(err)
    }
    
    ctx.Init()

    err = gas.Init(web.GetBackEnd(), "app", &gas.C{Root: &App{}})
    if err != nil {
        panic(err)
    }

    web.KeepAlive()
}

type App struct {}

