package main

import (
    "fmt"
    
    "github.com/gascore/dom"

    "github.com/gascore/gas"
    "github.com/gascore/gas/web"
    "github.com/gascore/std/router"
)

func main() {
    fmt.Println("Hello stranger!ðŸ‘‹")

    app := &App{
        rCtx: InitRouter(),
        htmlEl: dom.Doc.GetElementsByTagName("html")[0], // save <html/> for change theme
    }
    c := &gas.C{Root: app}
    app.c = c

    err := web.Init(c, "app")
    if err != nil {
        panic(err)
    }

    web.KeepAlive()
}

type App struct {
    c *gas.C
    rCtx *router.Ctx
    isDark bool
    htmlEl *dom.Element
}

