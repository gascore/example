func (root *App) toggleTheme() {
    if root.isDark { // remove class
        root.htmlEl.ClassList().Remove("dark")
    }

    root.isDark = !root.isDark

    if root.isDark { // add class
        root.htmlEl.ClassList().Add("dark")
    }
}
