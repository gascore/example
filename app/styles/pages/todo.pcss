#todoList {
    .todo-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }
    #todo-footer {
        nav {
            a {
                text-decoration: none;
                cursor: pointer;
                margin: 0 .24em;
                padding: 4px;
                border-radius: .6rem;
            }
            a:hover {
                padding: 3px;
                border: 1px solid var(--color-primary);
            }
            a.active {
                padding: 3px;
                border: 1px solid var(--color-second-primary);
            }
            &:first-child {
                margin: 0 .24em 0 0;
            }
        }
    }
}